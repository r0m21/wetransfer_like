{% extends 'Layout/layout.html.twig' %}

{% block title %}
    {{ parent() }} - Home</title>
{% endblock %}

{% block content %}
<section class="ptb-30 h60vh h60vh-mobile d-flex">
    
    <form class="d-flex column justify-content-around w60 bg-color-1 ptb-30" method="POST" action="transfert" enctype="multipart/form-data">

        <div class="d-flex justify-content-center">
            <label for="fichier">
                <i class="fas fa-plus-circle fs-10"></i>
            </label>
            <input class="input-file" type="file" name="fichier" id="fichier"/>
        </div>

        <div class="d-flex column align-items-center mtb-40-20">
            <label class="w70 fs-4 pb-10 raleway" for="expediteur" >Votre Email</label>
            <input class="w70 fs-3 p-5" type="text" name="expediteur" id="expediteur">
        </div>

        <div class="d-flex column align-items-center mtb-20-40">
            <label class="w70 fs-4 pb-10 raleway" for="destinataire">Email destinataire</label>
            <input class="w70 fs-3 p-5" type="text" name="destinataire" id="destinataire">
        </div>

        {%   if sessions.globalMessage != '' %}

            <p class="error fs-4 p-10 text-center">
                {{   sessions.globalMessage   }}
            </p>

        {%   endif   %}

        <div class="text-center">
            <input class="white fs-4 ptb-10-15 bg-color-2 border-none" type="submit" value="ENVOYER" name="submitForm">
        </div>
    </form>

    <div class="w40 d-flex column justify-content-center">
        <div class="d-flex column align-self-center mtb-30">
            <div class="d-flex column borderleft-1 pl-80">
                <h5 class="fs-4 text-center white raleway fw-300">Nothing is lost,</h5>
                <h5 class="fs-5 text-center white raleway fw-300 mt-6">Nothing is created,</h5>
            </div>
            <h4 class="mt-25 fs-6 italic white raleway fw-300 pl-80"><span class="borderbot-1 pb-10">Everything is transfered</span></h4>
        </div>
        
    </div>
    
</section>

