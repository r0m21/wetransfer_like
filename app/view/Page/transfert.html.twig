{% block title %}
    {{ parent() }} - Transfert</title>
{% endblock %}

{% block content %}
<section class="ptb-30 h60vh d-flex justify-content-around justify-content-center-mobile">
    <div class="w30 none-mobile">
        <div class="d-flex column borderleft-1 pl-50 none-mobile">
                <h5 class="fs-4 text-center white raleway fw-300">Nothing is lost,</h5>
                <h5 class="fs-5 text-center white raleway fw-300 mt-6">Nothing is created,</h5>
            </div>
    </div>
    <div class="h100 w40 bg-color-1 exo  text-center d-flex column justify-content-around break-word w40-mobile">    
        <p class="fs-50 fw-500">{{ expediteur }}</p>
        <div>
            <p class="fs-50 fw-300 opacity07 p-5">Envoie le fichier</p>
            <p class="fs-50 fw-500">"{{ fichier }}"</p>
        </div>
        <div>
            <p class="fs-50 fw-300 opacity07 p-5">À l'adresse</p>
            <p class="fs-50 fw-500">{{ destinataire }}</p>
        </div>
        <form method="POST" action="success/{{ id }}" >
        <div class="text-center">
            <input class="white fs-4 ptb-10-15 bg-color-2 border-none" type="submit" value="CONTINUER" name="submitForm">
        </div>
    </form>    
    </div>
    <div class="w30 d-flex column justify-content-end none-mobile">
        <div class="d-flex column align-self-center mtb-30">
            
            <h4 class="mt-25 fs-4 italic white raleway fw-300 pl-80 "><span class="pb-10 borderbot-1">Everything is transfered</span></h4>
        </div>
        
    </div>

</section>
